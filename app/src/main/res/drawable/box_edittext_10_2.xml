<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">

        <layer-list>
            <item>
                <shape android:shape="rectangle" android:useLevel="true">
                    <solid android:color="@color/white_10" />
                    <corners android:radius="50dp"/>
                </shape>
            </item>
            <item
                android:top="30dp"
                android:left="48dp"
                android:right="20dp"
                >
                <shape android:shape="line">
                    <stroke
                        android:width="2dp" android:color="#8E8980"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle" android:useLevel="true" >
                    <solid android:color="@color/white_10" />

                    <corners android:radius="50dp" />
                </shape>
            </item>
            <item
                android:top="30dp"
                android:left="48dp"
                android:right="20dp"
                >
                <shape android:shape="line">
                    <stroke android:width="1dp" android:color="#8E8980"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
